<loops>
   <loops class="java.util.LinkedList">
      <loop rate="1000">
         <sensors class="java.util.LinkedList">
             
            <sensor property="br.com.vt.mapek.bundles.sensors.battery.IBatterySensor"/>
         </sensors>
         <policys class="java.util.LinkedList">
            <policy property="BATERIA" condition="MENOR_IGUAL_QUE" setpoint="10"/>
         </policys>
         <actions class="java.util.LinkedList">
            <action id="START_COMPONENT" params="rb_spell_services.bundle"/>
            <action id="START_COMPONENT" params="rb_spell_checker.bundle"/>
            <action id="START_COMPONENT" params="rb_spell_english.bundle"/>
            <action id="START_COMPONENT" params="rb_spell_checker_gui.bundle"/>
            <action id="START_COMPONENT" params="rb_spellcheckgui_for_android.bundle"/>
         </actions>
      </loop>
      <loop rate="1000">
         <sensors class="java.util.LinkedList">
            <sensor property="br.com.vt.mapek.bundles.sensors.battery.IBatterySensor"/>
         </sensors>
         <policys class="java.util.LinkedList">
            <policy property="BATERIA" condition="MAIOR_IGUAL_QUE" setpoint="50"/>
         </policys>
         <actions class="java.util.LinkedList">
          	<action id="STOP_COMPONENT" params="rb_spell_checker_gui.bundle"/>
            <action id="STOP_COMPONENT" params="rb_spellcheckgui_for_android.bundle"/>
         </actions>
      </loop>
   </loops>
</loops>