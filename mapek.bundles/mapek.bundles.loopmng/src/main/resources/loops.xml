<loops>
   <loops class="java.util.LinkedList">
      <loop rate="1000">
         <sensors class="java.util.LinkedList">
            <sensor id="BATERIA" property="BATERIA"/>
         </sensors>
         <policys class="java.util.LinkedList">
            <policy property="BATERIA" condition="MENOR_IGUAL_QUE" setpoint="10"/>
         </policys>
         <actions class="java.util.LinkedList">
            <action id="START_COMPONENT" params="rb_spell_services"/>
            <action id="START_COMPONENT" params="rb_spell_checker"/>
            <action id="START_COMPONENT" params="rb_spell_english"/>
            <action id="START_COMPONENT" params="rb_spell_checker_gui"/>
            <action id="START_COMPONENT" params="rb_spellcheckgui_for_android"/>
         </actions>
      </loop>
      <loop rate="1000">
         <sensors class="java.util.LinkedList">
            <sensor id="BATERIA" property="BATERIA"/>
         </sensors>
         <policys class="java.util.LinkedList">
            <policy property="BATERIA" condition="MAIOR_IGUAL_QUE" setpoint="50"/>
         </policys>
         <actions class="java.util.LinkedList">
          	<action id="STOP_COMPONENT" params="rb_spell_checker_gui"/>
            <action id="STOP_COMPONENT" params="rb_spellcheckgui_for_android"/>
         </actions>
      </loop>
   </loops>
</loops>