<loops>
	<loops>
	    <loop rate="1000">
			<sensors>
				<sensor className="br.com.vt.mapek.bundles.sensors.battery.IBatterySensor" />
			</sensors>
			<policys>
				<policy property="BATTERY" condition="MAIOR_QUE" bound="33"  />
			</policys>
			<actions>
			
				<action id="STOP_COMPONENT" params="rb_quicksort.bundle" />
				<action id="STOP_COMPONENT" params="rb_bubblesort.bundle" />
			</actions>
		</loop>
	    <loop rate="1000">
			<sensors>
				<sensor className="br.com.vt.mapek.bundles.sensors.battery.IBatterySensor" />
			</sensors>
			<policys>
				<policy property="BATTERY" condition="ENTRE" lowerbound="30" upperbound="33"  />
			</policys>
			<actions>
			
				<action id="START_COMPONENT" params="rb_quicksort.bundle" />
				<action id="STOP_COMPONENT" params="rb_bubblesort.bundle" />
			</actions>
		</loop>
		<loop rate="1000">
			<sensors>
				<sensor className="br.com.vt.mapek.bundles.sensors.battery.IBatterySensor" />
			</sensors>
			<policys>
				<policy property="BATTERY" condition="ENTRE" lowerbound="27" upperbound="29" />
			</policys>
			<actions>
				<action id="STOP_COMPONENT" params="rb_quicksort.bundle" />
				<action id="START_COMPONENT" params="rb_bubblesort.bundle" />
			</actions>
		</loop> 
		<loop rate="1000">
			<sensors>
				<sensor className="br.com.vt.mapek.bundles.sensors.battery.IBatterySensor" />
			</sensors>
			<policys>
				<policy property="BATTERY" condition="MENOR_QUE" bound="27" />
			</policys>
			<actions>
				<action id="STOP_COMPONENT" params="rb_quicksort.bundle" />
				<action id="STOP_COMPONENT" params="rb_bubblesort.bundle" />
			</actions>
		</loop> 
		
	</loops>
</loops>
