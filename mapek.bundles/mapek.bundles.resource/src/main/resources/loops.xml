<loops>
	<loops>
		<loop rate="1000">
			<sensors>
				<sensor className="br.com.vt.mapek.bundles.sensors.battery.IBatterySensor" />
			</sensors>
			<policys>
				<policy property="BATTERY" condition="MAIOR_IGUAL_QUE" bound="5"  />
				<policy property="BATTERY" condition="MENOR_IGUAL_QUE" bound="10"  />
			</policys>
			<actions>
				<action id="STOP_COMPONENT" params="rb_quicksort.bundle" />
				<action id="START_COMPONENT" params="rb_bubblesort.bundle" />
			</actions>
		</loop> 
		<loop rate="1000">
			<sensors>
				<sensor className="br.com.vt.mapek.bundles.sensors.battery.IBatterySensor" />
			</sensors>
			<policys>
				<policy property="BATTERY" condition="MAIOR_QUE" bound="10"  />
				<policy property="BATTERY" condition="MENOR_IGUAL_QUE" bound="15"  />
			</policys>
			<actions>
			
				<action id="START_COMPONENT" params="rb_quicksort.bundle" />
				<action id="STOP_COMPONENT" params="rb_bubblesort.bundle" />
			</actions>
		</loop>
	</loops>
</loops>

